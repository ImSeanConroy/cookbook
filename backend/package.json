{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "dev": "ts-node-dev --files src/index.ts",
    "build": "tsc && cp /package.json ./dist",
    "start": "node dist/index.js",
    "migrate:up": "node-pg-migrate --migration-file-language sql up",
    "migrate:down": "node-pg-migrate --migration-file-language sql down",
    "migrate:redo": "node-pg-migrate --migration-file-language sql redo",
    "migrate:create": "node-pg-migrate --migration-file-language sql create",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "seed": "ts-node src/seeders/recipe.seeder.ts"
  },
  "author": "Sean Conroy",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "winston": "^3.19.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/cookie-session": "^2.0.49",
    "@types/cors": "^2.8.19",
    "@types/morgan": "^1.9.10",
    "@types/pg": "^8.15.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "node-pg-migrate": "^8.0.3",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
